<!-- Form for phone after new sign up -->

<div id="send-pin">
  <h3>First Post?</h3>
  <p>Let's Verify Your Phone Via SMS:</p>
  <%= form_for @user, remote: true, :url => phone_entry_users_path do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.text_field :phone_number, :placeholder => "MAKE SURE TO INCLUDE '1'. ex: 1718567890. " %>
      <small>You may only associate one account per phone number.</small>
    </div>
      <%= f.submit "Send Verification PIN", class: "btn btn-primary", id: 'send-pin-link' %>
  <% end %>
</div>

<div id="verify-pin">
  <h3>Enter your four-digit PIN</h3>
  <%= form_tag users_verify_path, remote: true do |f| %>
	<%= hidden_field_tag 'hidden_phone_number', '' %>
	  <div class="form-group">
		<%= text_field_tag :phone_pin %>
	  </div>
	  <%= submit_tag "Verify PIN", class: "btn btn-primary" %>
	<% end %>
</div>

<div id="status-box" class="alert alert-success">
  <p id="status-message">Status: Haven't done anything yet</p>
</div>
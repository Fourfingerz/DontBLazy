<li>
  <%= link_to gravatar_for(user, size: 50), user %>
    <% full_name = user.name + " " + user.last_name %>
  <%= link_to full_name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>
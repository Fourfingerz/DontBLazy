<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  </br>
  <span class="title"><%= micropost.title %></span> <!-- Append link here -->
  <span class="content">
    <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>   
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
    </br>
    Deadline: <%= distance_of_time_in_words(Time.now, Time.now + micropost.days_to_complete, include_seconds: true) %> 

    <!-- Deadline is the distance from Time.now to delayed_job triggering -->
    
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>